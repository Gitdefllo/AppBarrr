<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppBarrr">
        <!-- Default toolbar layout -->
        <attr name="toolbarLayout" format="reference" />
        <!-- Close icon drawable -->
        <attr name="toolbarIconClose" format="integer" />
        <!-- Default expanded layout -->
        <attr name="expandLayout" format="reference" />
        <!-- Max size of expanded layout -->
        <attr name="expandMaxSize" format="dimension" />
        <!-- Duration of expanding animation -->
        <attr name="animExpandDuration" format="integer" />
        <!-- Duration of collapsing animation -->
        <attr name="animCollapseDuration" format="integer" />
        <!-- Content scrim of collapsingtoolbar -->
        <attr name="contentScrimBar" format="reference" />
        <!-- Expanded title style of collapsingtoolbar -->
        <attr name="toolbarTitleExpandStyle" format="integer" />
        <!-- Collapsed title style of collapsingtoolbar -->
        <attr name="toolbarTitleCollapseStyle" format="integer" />
        <!-- Touch outside to hide expanded layout -->
        <attr name="hideWhenTouchOutside" format="boolean" />
    </declare-styleable>
</resources>